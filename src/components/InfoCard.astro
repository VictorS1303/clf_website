---
const { header, text, click } = Astro.props;
---

<article class="info-card">
  <div class="info-content center-text">
    <slot />
    <h2>{header}</h2>
    <p><i>{text}</i></p>
  </div>
  <div class="button-content">
    <button class="button">{click} &gt;</button>
    <!-- denne funktion " &gt" giver en ">"  -->
  </div>
</article>

<style>
  .info-card {
    width: 325px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    overflow: hidden;
    box-shadow: 0px 2px 4px (0, 0, 0, 0.2);
    margin: 20px;
    background-color: var(--card-background-color);
  }
  .info-content {
    text-align: center;
  }
  .center-text {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  p {
    max-width: 20ch;
    padding: 1rem 0 2.5rem 0;
  }
  h2 {
    margin-top: 40px;
    font-weight: 300;
  }

  .button-content {
    display: flex;
    padding: 10px 20px;
    align-self: flex-end;
    margin-bottom: 10px;
  }

  .button {
    color: #fff;
    background-color: transparent;
    cursor: pointer;
    transition: color 0.3s linear;
    border: none;
    padding: 10px 20px;
    font-size: 14px;
  }

  .button:hover {
    color: var(--link-hover-text-color);
  }
</style>
