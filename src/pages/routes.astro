---
import Layout from "../layouts/Layout.astro";
import Button from "../components/CallToActionButton.astro";
---

<Layout>
  <div class="personliggør_rute">
    <img src="/rute.webp" alt="" />
    <p>Personliggør din rute ved at tilføje vores værker til din egen ruteliste eller se vores ruter.</p>
    <div class="btn_personal"><Button action="Personliggør" /></div>
    <div class="btn_seruter"><Button action="Se ruter" /></div>
  </div>

  <main>
    <h1 class="h1_tilføj">Du har tilføjet: 2 værker til din rute</h1>

    <article class="værker_kurv">
      <div class="kurv_1">
        <h2>01. Du som er i himlene!</h2>
        <img src="/dusomerihimlene.avif" alt="test" />
      </div>
      <div class="kurv_2">
        <h2>02. GAIA</h2>
        <img src="/gaia.avif" alt="billede" />
      </div>
    </article>
    <div class="din_rute"><Button action="Se din rute" /></div>
  </main>

  <h2 class="h2_personlige">DIN PERSONLIGE RUTE</h2>
  <div class="personlige_kort">
    <img src="/kort1.avif" alt="billede" />
    <div class="print_btn"><Button action="Print" /></div>
  </div>

  <section class="maxwidth">
    <h3 class="h3_rute">DEN KORTE RUTE</h3>
    <p class="p_tekst">6 km / 3,7 miles / walk 1 t 30 min / bike 20 min</p>
    <div class="kort_img"><img src="/kort2.avif" alt="billede" /></div>

    <h3 class="h3_rute">DEN LANGE RUTE</h3>
    <p class="p_tekst">4 km / 2,4 miles / walk 55 min / bike 12 min</p>
    <div class="kort_img"><img src="/kort3.avif" alt="billede" /></div>
  </section>
</Layout>

<style>
  main {
    max-width: 1200px;
    margin: auto;
  }
  .maxwidth {
    max-width: 1200px;
    margin: auto;
  }
  .personliggør_rute {
    display: grid;
    grid-template-columns: 1fr 0.5fr 0.5fr 1fr;
    grid-template-rows: 1fr 1fr 1fr 1fr;
    gap: 20px;
  }

  .personliggør_rute img {
    grid-column: 1/5;
    grid-row: 1/5;
    max-height: 70vh;
    opacity: 60%;
  }

  .personliggør_rute p {
    grid-column: 2/4;
    grid-row: 2/3;
    background-image: linear-gradient(0deg, rgba(33, 15, 52, 0.704) 0%, rgba(11, 11, 12, 0.685) 100%);
    padding: 1rem;
    max-width: 40ch;
    justify-self: center;
    align-self: center;
    z-index: 1;
  }

  .btn_personal {
    grid-column: 2/3;
    grid-row: 3/4;
    justify-self: end;
    z-index: 1;
  }
  .btn_seruter {
    grid-column: 3/4;
    grid-row: 3/4;
    z-index: 1;
  }

  .h1_tilføj {
    margin-top: 8rem;
  }

  .værker_kurv {
    margin-top: 3rem;
  }
  .værker_kurv img {
    width: 50%;
  }

  .kurv_1 {
    display: grid;
    grid-template-columns: 2fr 1fr;
    border: 2px solid;
    border-image-source: var(--citat-background-color);
    border-image-slice: 1;
    margin-bottom: 1rem;
    align-items: center;
  }
  .kurv_1 img {
    justify-self: end;
  }
  .kurv_2 {
    display: grid;
    grid-template-columns: 2fr 1fr;
    border: 2px solid;
    border-image-source: var(--citat-background-color);
    border-image-slice: 1;
    align-items: center;
  }

  .kurv_2 img {
    justify-self: end;
  }

  .din_rute {
    text-align: center;
    margin-top: 3rem;
  }

  .h2_personlige {
    text-align: center;
    margin-top: 15rem;
    margin-bottom: 2rem;
  }

  .h3_rute {
    text-align: center;
    margin-top: 15rem;
  }

  .p_tekst {
    text-align: center;
    margin-bottom: 2rem;
  }

  .kort_img {
    width: 50%;
    height: auto;
    margin-left: 25%;
  }

  .personlige_kort {
    display: grid;
    grid-template-columns: 1fr 8fr 1fr;
  }
  .personlige_kort img {
    width: 100%;
    height: 80vh;
    grid-column: 1/4;
    grid-row: 1/2;
  }
  .print_btn {
    grid-column: 3/4;
    grid-row: 1/2;
    align-self: end;
    justify-self: center;
    margin-bottom: 1rem;
  }
</style>
