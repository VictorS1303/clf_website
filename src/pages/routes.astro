---
import Layout from "../layouts/Layout.astro";
import Button from "../components/CallToActionButton.astro";
---

<Layout>
  <div class="personliggør_rute">
    <div class="img_rute">
      <img src="rute.webp" alt="" />
    </div>
    <div class="text_content">
      <p>Personliggør din rute ved at tilføje vores værker til din egen ruteliste eller se vores ruter.</p>
      <div class="btn-group">
        <Button action="Personliggør" />
        <Button action="Se ruter" />
      </div>
    </div>
  </div>
</Layout>

<style>
  .personliggør_rute {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
    max-width: 800px;
  }
  .img_rute {
    grid-column: 1 / span 5;
    grid-row: 1/4;
  }
</style>
